# Database
DATABASE_URL=postgresql://autobot:autobot_password@localhost:5432/autobot

# Redis (optional, for distributed locking)
REDIS_URL=redis://localhost:6379

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# ============================================
# SOLANA CONFIGURATION
# ============================================
# Your Solana RPC endpoint (use a paid RPC for production)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Your Solana wallet private key (base58 encoded)
# WARNING: Never commit real keys! Use a dedicated trading wallet with limited funds.
# To get your private key in base58: use Phantom or Solflare export feature
SOLANA_PRIVATE_KEY_BASE58=

# Jupiter API settings
JUPITER_API_BASE=https://quote-api.jup.ag/v6

# Priority fee in micro-lamports (1000 = 0.001 lamports per compute unit)
# Increase during congestion for faster confirmation
SOLANA_PRIORITY_FEE_MICRO_LAMPORTS=1000

# ============================================
# AVALANCHE CONFIGURATION
# ============================================
# Your Avalanche RPC endpoint (public or paid)
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# Your Avalanche wallet private key (hex, with or without 0x prefix)
# WARNING: Never commit real keys! Use a dedicated trading wallet with limited funds.
EVM_PRIVATE_KEY=

# ParaSwap partner ID (optional)
PARASWAP_PARTNER=autobot

# Maximum gas price in GWEI (safety limit)
AVALANCHE_MAX_GAS_GWEI=100

# ============================================
# BOT SETTINGS
# ============================================
# How often the bot checks for trading opportunities (milliseconds)
BOT_LOOP_INTERVAL_MS=10000

# How often to take position snapshots (milliseconds)
POSITION_SNAPSHOT_INTERVAL_MS=60000

# How often to take PnL snapshots (milliseconds)
PNL_SNAPSHOT_INTERVAL_MS=3600000

# ============================================
# ALERTING (OPTIONAL)
# ============================================
# Generic webhook URL for notifications
WEBHOOK_URL=

# Discord webhook URL for Discord notifications
DISCORD_WEBHOOK_URL=

# ============================================
# DEBUG
# ============================================
DEBUG=false
