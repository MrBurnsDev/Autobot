# --- Solana (required for SOL trading) ---
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PRIVATE_KEY_BASE58=your_solana_private_key_here
SOLANA_PRIORITY_FEE_MICRO_LAMPORTS=1000
# Jupiter API key - get free key at https://station.jup.ag/docs/apis/api-keys
JUPITER_API_KEY=

# --- Avalanche (required for AVAX trading) ---
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
EVM_PRIVATE_KEY=your_avalanche_private_key_here
